= form_for @level, html: { class: 'form-horizontal' } do |f|
  = render 'layouts/shared/errors', object: @level
  .form-group
    = f.label :name, 'Name', class: 'col-lg-2 col-sm-2 control-label'
    .col-lg-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :color, 'Color', class: 'col-lg-2 col-sm-2 control-label'
    .col-lg-10
      = f.text_field :color, class: 'colorpicker colorpicker-default form-control', value: "#{@level.color || ''}"
  %br/
  = f.submit nil, class: 'btn btn-primary'
  - if action?('edit')
    = link_to 'Delete Level', @level, confirm: 'Are you sure?', method: 'delete', class: 'btn btn-danger'
  = link_to 'Cancel', levels_path, class: 'btn'
